{
  "$schema": "https://opencode.ai/config.json",
  "tui": {
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "model": "copilot/claude-sonnet-4.5",
  "theme": "gruvbox",
  "formatter": {
    "py": {
      "command": [
        "ruff",
        "format"
      ],
      "extensions": [
        ".py"
      ]
    }
  },
  "lsp": {
    "cue": {
      "command": [
        "cue",
        "lsp",
        "serve"
      ],
      "extensions": [
        ".cue"
      ]
    },
    "ty": {
      "command": [
        "uvx",
        "ty",
        "server"
      ],
      "extensions": [
        ".py"
      ]
    }
  },
  "mcp": {}
}
